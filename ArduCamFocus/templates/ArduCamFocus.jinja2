<div id="control_focus_wrapper" data-bind="allowBindings: false">
	<div id="control_focus_snippet" class="jog-panel" data-bind="allowBindings: true">
		<h1 style="margin-bottom: 0;">ArduCam Focus</h1>
		<div class="row-fluid" data-bind="text: error_msg, visible: error_msg().length > 0"></div>
		<div class="row-fluid" data-bind="text: focus_val, visible: error_msg().length == 0"></div>
		<div>
			<button id="control-focusdec" class="btn" data-bind="enable: controlViewModel.isOperational() && focus_val() > 100 && error_msg().length == 0, click: function() { OctoPrint.control.sendGcode('@ARDUCAMFOCUS -10'); }"><i class="fa fa-arrow-left"></i></button>
			<button id="control-focusdec" class="btn" data-bind="click: function() { OctoPrint.control.sendGcode('@ARDUCAMAUTOFOCUS'); }"><i class="fa fa-magic"></i></button>
			<button id="control-focusinc" class="btn" data-bind="enable: controlViewModel.isOperational() && focus_val() < 1000 && error_msg().length == 0, click: function() { OctoPrint.control.sendGcode('@ARDUCAMFOCUS 10'); }"><i class="fa fa-arrow-right"></i></button>
		</div>
	</div>
</div>
